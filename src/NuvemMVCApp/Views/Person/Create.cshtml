@model NuvemMVCApp.Models.Person

@{
    ViewData["Title"] = "Create Person";
}

<h2>Create Person</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Person</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="name" class="col-md-2 control-label">@Html.DisplayNameFor(model => model.name)</label>
            <div class="col-md-10">
                <input asp-for="name" class="form-control"/>
                <span asp-validation-for="name" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="age" class="col-md-2 control-label">@Html.DisplayNameFor(model => model.age)</label>
            <div class="col-md-10">
                <input asp-for="age" class="form-control" />
                <span asp-validation-for="age" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="birthDate" class="col-md-2 control-label">@Html.DisplayNameFor(model => model.birthDate)</label>
            <div class="col-md-10">
                <input asp-for="birthDate" type="date" class="form-control" />
                <span asp-validation-for="birthDate" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
